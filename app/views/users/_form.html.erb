<section class="all-form-text all-sign-up-box">

<h2>All Aboard! Sign up now.</h2>
<%= form_for user, html: { multipart: true } do |f| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field" class="form-group">
    <%= f.label :name %><br />
    <%= f.text_field :name, placeholder: "Full Name", :class => "form-control" %>
  </div>

  <div class="field" class="form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, placeholder: "Email", :class => "form-control" %>
  </div>

  <div class="field" class="form-group">
   <%= f.label :password %><br />
   <%= f.password_field :password, placeholder: "Create password", :class => "form-control" %>
 </div>

 <div class="field" class="form-group">
   <%= f.label :password_confirmation %><br />
   <%= f.password_field :password_confirmation, placeholder: "Confirm password", :class => "form-control" %>
 </div>

  <div class="field" class="form-group">
    <%= f.label :bio %>
    <%= f.text_area :bio, placeholder: "Optional", :class => "form-control"%>
  </div>

    <div class="field">
   <%= f.file_field :user_image_file %>
    </div>

  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>

<%= link_to 'Back',  new_user_session_path %>
</section>
