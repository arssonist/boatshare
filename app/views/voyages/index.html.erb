</aside>

<!-- Portfolio -->
<section id="portfolio" class="portfolio">
    <div class="container">
        <div class="row">
            <div class="col-lg-10 col-lg-offset-1 text-center">
                <h2>Choose a Voyage</h2>
                <hr class="small">
                <div class="row">
                  <% @voyages.each do |voyage|%>
                    <div class="col-md-6">
