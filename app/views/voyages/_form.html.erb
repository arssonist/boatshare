<section class="voyage-new-edit all-form-text">

<h1>Create a new voyage!</h1>

<%= form_for @voyage do |f| %>

  <div>
   <%= f.label :title %>
   <%= f.text_field :title %>
   </div>

  <div>
    <%= f.label :description %>
    <%= f.text_area :description%>
  </div>

  <div>
    <%= f.label :location %>
    <%= f.text_field :location %>
  </div>

  <div>
    <%= f.label :vessel_type %>
    <%= f.select :vessel_type, options_for_select([['Keelboat','Keelboat'], ['Dinghy','Dinghy'],['Canoe','Canoe'],['Kayak ','Kayak'],['Motorboat ','Motorboat'],['Jetski','Jetski'],['Catamaran','Catamaran']]) %>
  </div>

  <div>
    <%= f.label :boat_image_url %>
    <%= f.text_field :boat_image_url %>
  </div>

  <div>
    <%= f.label :voyage_image_url %>
    <%= f.text_field :voyage_image_url %>
  </div>

  <div>
    <%= f.label :start_time %>
    <%= f.datetime_field :start_time %>
  </div>

  <div>
    <%= f.label :end_time %>
    <%= f.datetime_field :end_time %>
  </div>

  <div>
    <%= f.label :capacity%>
    <%= f.select :capacity, options_for_select(0..20) %>
  </div>

    <%= f.submit %>
      <% end %>

</section>
