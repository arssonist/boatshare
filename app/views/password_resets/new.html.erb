<section class="all-form-text">

    <h1 id="reset-password-h1"> Reset your password </h1>

<%= form_tag password_resets_path, {:method => :post} do %>
  <div class="field" class="form-group">
    <%= label_tag :email %> <br/>
    <%= text_field_tag :email %>
    <%= submit_tag "Reset my password", :class => 'btn btn-primary' %>
  </div>
<% end %>

</section>
