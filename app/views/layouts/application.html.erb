<!DOCTYPE html>
<html>
<head>
  <title>Boatshare</title>
  <%= stylesheet_link_tag '' %>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <header>

    <section class="container headerLogo">
          <div class="row">
              <div class="col-md-4 text-left">
              </div>
              <div class="col-md-4 text-center">
                  <h1>Boatshare</h1>
              </div>
              <div class="col-md-4 text-right">
                  <input type="button" class="btn btn-default btn-sm btHeader" value="Log In"><input type="button" class="btn btn-default btn-sm btHeader" value="Sign Up">
              </div>
          </div>
          <div class="row">
              <div class="col-md-12">
                  <img src="http://www.graphicdesignbylisa.com/wp-content/uploads/generic-logo.jpg" class="img-responsive">
              </div>
          </div>
      </section>


            <!-- Menu bootstrap -->
            <nav class="navbar navbar-inverse">
              <div class="container">
                <div class="navbar-header">
                  <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                  </button>
                </div>
                <div id="navbar" class="collapse navbar-collapse">
                  <ul class="nav navbar-nav">
                    <li><%= link_to "Home", root_path %></li>
                    <li><%= link_to "Register", new_user_path %></li>
                    <li><%= link_to "Profile", user_path(current_user)%></li>
                    <li><a href="voyages">Voyages</a></li>
                    <li class="pull-right">
                        <form method="get" action="http://www.google.com" class="pull-right">
                            <input type="text" name="q" class="inputSearch" size="15" maxlength="120"><input type="submit" class="inputSearch" value="Search">
                        </form>
                    </li>
                  </ul>
                </div><!-- /.nav-collapse -->
              </div><!-- /.container -->
            </nav>


      </header>

        <div id="nav">
            <%= link_to "Home", root_path %>
          <% if current_user %>
            <%= link_to "Profile", user_path(current_user)%>
            <%= link_to "Logout", :logout, method: :post %>
          <% else %>
            <%= link_to "Register", new_user_path %> |
            <%= link_to "Login", :login %>
            <%= link_to "Home", root_path %>
          <% end %>
        </div>
        <div>
          <p id="notice"><%= flash[:notice] %></p>
          <p id="alert"><%= flash[:alert] %></p>
        </div>
        <% if flash.any? %>
        <% flash.each do |key, value| %>

      </p>
      <% end %>
      <% end %>

      <%= yield %>

      <div class="row text-center">
      <div class="col-lg-12">
      <ul class="pagination">
          <li>
              <a href="#">&laquo;</a>
          </li>
          <li class="active">
              <a href="#">1</a>
          </li>
          <li>
              <a href="#">2</a>
          </li>
          <li>
              <a href="#">3</a>
          </li>
          <li>
              <a href="#">4</a>
          </li>
          <li>
              <a href="#">5</a>
          </li>
          <li>
              <a href="#">&raquo;</a>
          </li>
      </ul>
      </div>
      </div>

      <footer class="container-fluid">

          <div class="row">
              <div class="col-lg-12 text-center">
                  <p>Copyright &copy; Gilligan</p>
              </div>
          </div>

      </footer>
