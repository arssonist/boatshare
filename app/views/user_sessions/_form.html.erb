<section class="all-form-text login-in-bkg-box">
<h1>Login</h1>
<%= form_tag user_sessions_path, :method => :post, id: "login-form" do %>
  <div class="field">
    <%= label_tag :email %><br />
    <%= text_field_tag :email %>
  </div>
  <div class="field">
    <%= label_tag :password %><br />
    <%= password_field_tag :password %>
  </div>
  <div class="actions">
    <%= submit_tag "Login", :class => 'btn btn-primary' %>
  </div>
<% end %>

<%= link_to 'Forgot Password?', new_password_reset_path %>

</section>
